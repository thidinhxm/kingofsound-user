
{{>header}}
{{>navigation}}
<section class="login_box_area section-margin">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="login_box_img">
					<div class="hover">
						<h4>Bạn chưa có tài khoản?</h4>
						<a class="button button-account" href="/register">Tạo tài khoản</a>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="login_form_inner">
					<h3>Đăng nhập tài khoản</h3>
					<form class="row login_form" action="/login" id="login_form" method="POST">

						<div class="col-md-12 form-group">
							<input type="text" class="form-control" id="email-login" name="email" placeholder="Email">
						</div>
						<div class="col-md-12 form-group">
							<input type="password" class="form-control" id="password-login" name="password" placeholder="Mật khẩu">
						</div>
						<div class="col-md-12 form-group err-block">
							{{#if error}}
							<strong class="text-danger" id="error-login">{{error}}</strong>
							{{else}}
							<strong class="text-danger" id="error-login"></strong>
							{{/if}}
						</div>
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="button button-login" id="button-login">Đăng nhập</button>
							<a href="#">Quên mật khẩu?</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{{>footer}}
