
{{>header}}
{{>navigation}}
<section class="login_box_area section-margin">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="login_form_inner">
					<div class="row justify-content-center message-block-register">
						{{#if error}}
						<div class="alert alert-danger col-12">
							<p class="text-center message">{{error}}</p>
						</div>
						{{else}}
							{{#if success}}
								<div class="alert alert-success col-12">
									<p class="text-center message">{{success}}</p>
								</div>
							{{else}}
								<div class="col-12">
									<p class="alert text-center message" id="error-login"></p>
								</div>
							{{/if}}
						{{/if}}
					</div>
					<h3>Đặt lại mật khẩu mới</h3>
					<form class="row login_form" action="/reset-password" id="reset-password-form" method="POST">
						<input name="email" value="{{email}}" hidden>
						<input name="token" value="{{token}}" hidden>

						<div class="col-md-12 form-group">
							<input type="password" class="form-control" id="password-reset" name="password" placeholder="Mật khẩu">
						</div>
                        <div class="col-md-12 form-group">
							<input type="password" class="form-control" id="confirm-password-reset" name="confirmPassword" placeholder="Xác nhận mật khẩu">
						</div>
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="button button-login" id="button-reset-password">Đặt lại mật khẩu</button>
							<a href="/login">Hủy</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{{>footer}}
