<div class="cart">
  <div class="basket">
    <div class="basket-module">
      <label for="promo-code">Mã giảm giá</label>
      <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
      <button class="promo-code-cta">Áp dụng</button>
    </div>
    <div class="basket-labels">
      <ul>
        <li class="item item-heading">Sản phẩm</li>
        <li class="price">Đơn giá</li>
        <li class="quantity">Số lượng</li>
        <li class="subtotal">Thành tiền</li>
      </ul>
    </div>
{{#if detailCart}}
    {{#each detailCart}}
    <div class="basket-product">
      <div class="item">
        <div class="product-image">
          <img src="http://placehold.it/120x166" alt="Placholder Image 2" class="product-frame" height="120px"
            width="120px">
        </div>
        <div class="product-details">
          <h1><strong><span class="item-quantity">{{quantity}}</span> x Eliza J</strong> Lace Sleeve Cuff Dress</h1>
          <p><strong>Navy, Size 18</strong></p>
          <p>Product Code - 232321939</p>
        </div>
      </div>
      <div class="price">5000000</div>
      <div class="quantity">
        <input type="number" value="4" min="1" class="quantity-field">
      </div>
      <div class="subtotal">20000000</div>
      <div class="remove">
        <button>Remove</button>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="container order-exc">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-6" class="final-total">
        <div class="total-value final-value">
          <b class="total">Tổng tiền :</b> <i id="basket-total">20.000.000</i>
        </div>
      </div>
      {{#if user}}
      <a href="/user/checkout/{{user.user_id}}"><button class="promo-code-cta">Đặt hàng</a></button>
      {{else}}
      <a href="/login"><button class="promo-code-cta">Đặt hàng</a></button>
      {{/if}}

    </div>
  </div>
</div>
{{else}}
<h1>Lựa chọn sản phẩm bạn thích và đặt hàng!</h1>
{{/if}}